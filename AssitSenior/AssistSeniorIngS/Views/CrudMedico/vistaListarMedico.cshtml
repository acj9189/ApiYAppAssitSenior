@{
    Layout = null;
}

<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />

        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/EstilosCrudMedicos.css" rel="stylesheet" type="text/css" />

        <title> Medicos </title>
    </head>

    <body class="Fondo">

        <p class="alert-danger"> @ViewData["MsjEliminar"] </p>

        <div class="modal-dialog text-center">
            <div class="col-sm-8 main-section">
                <div class="modal-content">

                    <div class="col-12 user-img">
                        <img src="~/Content/Imagenes/Logo.png" />
                    </div>

                    <h3 class="text-center" style="color:beige"> Administrar Medicos </h3>

                    <div class="col-12 form-input">

                        @{ Html.BeginForm("EliminarMedico", "CrudMedico"); }

                        <div class="form-group text-left">
                            <asp:Label for="medico" class="fa fa-user-md" style="color:beige"> Medicos  </asp:Label>
                            @Html.DropDownList("listaMedicos", null, htmlAttributes: new { @class = "form-control", @style = "color:black" })
                        </div>

                        <div class="row">
                            <div class="text-left" style="margin-left: 2%">
                                <div style="margin-bottom:5px">
                                    <button id="btnEliminar" align="center" class="btn btn-info btn-lg" style=" width:130px"> Eliminar </button>
                                </div>
                            </div>

                            @{ Html.EndForm();}

                            @{ Html.BeginForm("vistaformularioMedico", "FormularioMedico"); }
                            <div class="text-right offset-2">
                                <div style="margin-bottom:5px">
                                    <button id="btnCrear" align="center" class="btn btn-info btn-lg" style=" width:130px ">Crear</button>
                                </div>
                            </div>
                        </div>

                        @{ Html.EndForm();}

                        @{ Html.BeginForm("Modificar", "FormularioMedico"); }
                        <div class="row">

                            <div class="text-left offset-3">
                                <div style="margin-bottom:5px">
                                    <button id="btnModificar" align="center" class="btn btn-info btn-lg" style=" width:130px">Modificar</button>
                                </div>
                            </div>
                        </div>
                        @{ Html.EndForm();}
                    </div>
                </div>
            </div>
        </div>

    </body>

</html>

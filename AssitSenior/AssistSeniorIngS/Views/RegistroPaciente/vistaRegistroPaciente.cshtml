
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/EstilosRegistro.css" rel="stylesheet" type="text/css" />
    <title> Registro Pacientes </title>
</head>

<body class="FondoRegistro">


    <div class="container FormularioPaciente">
        <div class="col-sm-8 mx-auto">
            <div class="card mt-5  CajaFormulario">
                <div class="card-body">
                    <h3 class="text-center">
                        <asp:span class="fa fa-user-plus" style="color:beige"> Formulario De Registro Pacientes </asp:span>
                    </h3>

                    <br />

                    <p class="alert-danger"> @ViewData["MsjSolicitudRegistro"] </p>

                    <asp:Label for="text" style="color:beige" class="offset-1" /> Datos Personales </asp:Label>

                    @{ Html.BeginForm("RegistrarPaciente", "RegistroPaciente"); }

                    <br />


                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Nombre * </asp:Label>
                        <input name="nombre" value="" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Apellido *  </asp:Label>
                        <input name="apellido" value="" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Cedula *  </asp:Label>
                        <input name="cedula" value="" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Edad * </asp:Label>
                        <input name="edad" type="number" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Direccion  </asp:Label>
                        <input name="direccion" value="" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Telefono  </asp:Label>
                        <input name="telefono" value="" class="form-control" style="color:black">
                    </div>


                    <div class="row col-12">
                        <div class="form-group col-5 offset-2">
                            <asp:Label for="text" style="color:beige"> Fecha Nacimiento *  </asp:Label>
                            <input name="fechaNacimiento" type="date" class="form-control" style="color:black">
                        </div>

                        <div class="form-group col-4 offset-1">
                            <asp:Label for="text" style="color:beige"> Sexo * </asp:Label>
                            <br />
                            <label style="color:beige"><input type="radio" name="sexo" value="M" checked>Masculino</label>
                            <br />
                            <label style="color:beige"><input type="radio" name="sexo" value="F">Femenino</label>
                            <br />
                        </div>
                    </div>

                    <br />
                    <asp:Label for="text" style="color:beige" class="offset-1" /> Informacion De Cuenta </asp:Label>
                    <hr style="background-color:azure" class=" col-10 offset-1" />



                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Email * </asp:Label>
                        <input name="email" type="email" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="password" class="fa fa-unlock-alt" style="color:beige" /> Contraseña * </asp:Label>
                        <input name="password" type="password" class="form-control" style="color:black">
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="password" class="fa fa-unlock-alt" style="color:beige" /> Confirme Su Contraseña * </asp:Label>
                        <input name="password2" type="password" class="form-control" style="color:black">
                    </div>
                    <br />
                    <asp:Label for="text" style="color:beige" class="offset-1" /> Datos Clinicos </asp:Label>
                    <hr style="background-color:azure" class=" col-10 offset-1" />

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" Text="Tiene Alguna Invalidez?" /> ¿Tienen Alguna Invalidez ? * </asp:Label>
                        <br />
                        <label style="color:beige"><input type="radio" name="invalidez" value="si">SI</label>
                        <br />
                        <label style="color:beige"><input type="radio" name="invalidez" value="no" checked>NO</label>
                        <br />
                    </div>

                    <div class="form-group col-8 offset-2">
                        <asp:Label for="text" style="color:beige" /> Explique brevemente porque solicita nuestros servicios * </asp:Label>
                        <textarea name="descripcion" rows="10" cols="55" class="form-control" required></textarea>

                    </div>

                    <br />

                    <button id="btnRegistro" align="center" class="btn btn-success btn-lg"> Solicitar Cuenta </button>

                    @{ Html.EndForm(); }

                </div>
            </div>
        </div>
    </div>

</body>
</html>

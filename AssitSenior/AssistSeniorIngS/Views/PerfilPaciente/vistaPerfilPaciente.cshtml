@{
    Layout = null;
}

<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/ScriptVerMm.js"></script>
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link href="~/Content/EstilosPerfPaciente.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

        <title> Perfil Paciente </title>

    </head>

    <body>

        <!-- MUESTRA ALERTA DESPUES DE CARGAR EL BODY COMPLETO -->
        @{

            if (@ViewBag.Excepcion != null)
            {
                <script>
                    alert("@ViewBag.Excepcion");
                </script>
            }

            else
            {
                if (@Session["Email"] != null)
                {
                    <script>
                    alert("Bienvenido " + "@Session["Email"]");
                    </script>

                }
            }

            if(ViewBag.MensajeActualizarDatos != null)
            {
                <script>
                    alert("@ViewBag.MensajeActualizarDatos");
                </script>
            }
        }

        <div class="offset-1">
            <a href="PerfilCliente">
                <img src="~/Content/Imagenes/Logo.png" width="180" height="110" alt="MDN" class="img-responsive">
            </a>
        </div>

        <div class="Auxheader">

            <input type="checkbox" id="btn-menu" />
            <label for="btn-menu" class="fa fa-bars fa-lg" style="color:beige"> Menu </label>

            <nav class="Navegacion" style="float:right">

                <ul class="Menu">

                    <li> <a href="vistaPerfilPaciente"> Inicio </a> </li>
                    <li>@Html.ActionLink("Editar Perfil", "vistaActualizarInfoPaciente", "ActualizarInfoPaciente")</li>
                    <li>
                        <a href="#"> Servicios</a>
                        <ul class="SubMenu">

                            <li> @Html.ActionLink("Solicitar Servicio", "vistaTipoServicio", "SeleccionarServicio") </li>
                            <li> @Html.ActionLink("Cancelar Servicio", "vistaCancelarServicio", "CancelarServicio") </li>
                            <li> <a href="#"> Otros </a> </li>
                        </ul>
                    </li>

                    <li> <a href="#"> Nuestra Empresa </a> </li>

                    <li> <a href="#"> Sector Salud </a> </li>

                    <li>
                        <a href="#" class="fa fa-caret-down fa" style="font-size:18px"> @Session["Email"] </a>
                        <ul class="SubMenu">
                            <li> <a href="#"> ensayo </a> </li>
                            <li> <a href="#"> ensayo 2 </a> </li>
                            <li> @Html.ActionLink("Cerrar Sesion", "Logout", "Autenticacion") </li>
                        </ul>
                    </li>

                </ul>

            </nav>

        </div>

        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="~/Content/Imagenes/Slide1.jpg" alt="La Familia" width="900" height="230">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Imagenes/Derechos.jpg" alt="Los Derechos de los Ancianos" width="900" height="230">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Imagenes/Equipo.jpg" alt="Nuestro Equipo" width="900" height="230">
                    <div class="carousel-caption">
                        <h3 style="color:black">Nuestro Equipo</h3>
                        <p style="color:black">EL mejor pool de profesionales a su disposicion y servicio.</p>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Imagenes/Acompañamiento.jpg" alt="Te Acompañamos" width="900" height="230">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>

        <div id="ZonaI">

            <input type="checkbox" id="btn-vermas" /> <!-- Check hermano para selector avanzado -->

            <div class="Zona-Interactiva">

                <div style="float:left; margin-left: 5%; margin-top: 0.5%;">
                    <img src="~/Content/Imagenes/IconoZonaInt.png" height="50" width="70">
                </div>

                <div style="float:left; margin-left: 10%; margin-top: 1%;">
                    <span> Zona interactiva </span>
                </div>

                <div class="embed-responsive-1by1" style="float:right; margin-right: 5%; margin-top: 1%">
                    <label for="btn-vermas" id="Labelvermm"> Ver más + </label>
                </div>

            </div>


            <!--Contiene la segunda lista para poder utilizar selector avanzado -->
            <ul class="ListaZonaInteractiva">
                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/ZioqmDMtkws"></iframe>
                </li>

                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/5C2dS6ResGs"></iframe>
                </li>

                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/ZzDW1eTGSUQ"></iframe>
                </li>

            </ul>


            <ul id="Lista2" class="ListaZonaInteractiva">
                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/ZioqmDMtkws"></iframe>
                </li>

                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/5C2dS6ResGs"></iframe>
                </li>

                <li style="cursor:pointer">
                    <iframe width="350" height="250" frameborder="0"
                            src="https://www.youtube.com/embed/ZzDW1eTGSUQ"></iframe>
                </li>

            </ul>

        </div>

        <footer class="footer-container">
            <div class="footer-main">

                <div class="footer-columna">
                    <a href="PerfilCliente">
                        <img src="~/Content/Imagenes/Logo.png" width="180" height="110" alt="MDN" class="img-responsive">
                    </a>
                </div>

                <div class="footer-columna">
                    <h3> Direccion </h3>
                    <span class="fa fa-map-marker">  Avenida Paralela N° 12-45 </span>
                    <span class="fa fa-phone">  +(57) 888 88 88 </span>
                    <span class="fa fa-envelope">  laterceraedad@gmail.com </span>
                </div>

                <div class="footer-columna">
                    <h3> Sobre Nosotros </h3>
                    <p>
                        Somos una institucion al servicio de la comunidad que le brinda acompañamiento en todo momento,
                        basados en los mas altos estandares de calidad para que usted y su familia siempre esten
                        protegidos, a mano de los mas altos profesionales capacitados para que su comodidad y atencion sean
                        siempre nuestra mejor opcion.
                    </p>
                </div>
            </div>


            <div class="footer-copy-redes">
                <div class="main-copy-redes">
                    <div class="footer-copy">
                        &copy; 2018, Todos Los Derechos Reservados - | La Tercera Edad |.
                    </div>

                    <div class="footer-redes">
                        <a href="#" class="fa fa-facebook"></a>
                        <a href="#" class="fa fa-twitter"></a>
                        <a href="#" class="fa fa-instagram"></a>
                    </div>
                </div>
            </div>

        </footer>

    </body>

</html>
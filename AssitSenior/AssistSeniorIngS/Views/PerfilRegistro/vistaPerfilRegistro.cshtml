@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="font-awesome.min.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/EstilosRegistro.css" rel="stylesheet" type="text/css" />

    <title> Registro Perfil </title>
</head>


<body class="FondoRegistro">

    <header class="main-header col-xl-12"></header>

    <!-- VENTANA DE OPCIONES  -->
    <div class="modal-dialog text-center" style="margin-top:10%;">
        <div class="col-sm-8 main-section">
            <div class="modal-content">
                    
                <h3>
                    <asp:span class="fa fa-user" style="color:beige"> Selecciona Tu Perfil </asp:span>
                </h3>

                <div class="row" style="margin-top:10px; margin-bottom:10px">
                    <div class="text-left" style="margin-left:30px">
                        <button class="btn btn-success btn-lg" onclick="location.href='@Url.Action("vistaRegistroPaciente", "RegistroPaciente")'"> Paciente </button>
                    </div>

                    <div class="text-right" style="margin-left:30px">
                        <button class="btn btn-success btn-lg" onclick="location.href='@Url.Action("vistaRegistroEnfermero", "RegistroEnfermero")'"> Enfermero </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>

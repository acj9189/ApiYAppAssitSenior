@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />

        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/EstilosTipoServicio.css" rel="stylesheet" type="text/css" />

        <title> Solicitud de Citas </title>
    </head>

    <body class="Fondo">

        @{
            if (ViewData["MensajeServicio"] != null)
            {
                <script>
                        alert(@ViewData["MensajeServicio"]);
                </script>
            }
        }

        <div class="modal-dialog text-center">
            <div class="col-sm-8 main-section">
                <div class="modal-content">
                
                    <div class="col-12 user-img">
                        <img src="~/Content/Imagenes/Logo.png"/>
                    </div>
               
                    <h3 class="text-center" style="color:beige"> Solicitud de Citas </h3>

                    <div class="col-12 form-input">
                    
                        @{ Html.BeginForm("vistaReservarServicio", "ReservarServicio"); }

                            <div class="form-group text-left">
                                <asp:Label for="tipoS" class="fa fa-medkit" style="color:beige"> Tipo de Servicio </asp:Label>
                                <select class="form-control" name="tipoS" style="color:black">
                                    <option value="Caminar">Salir a Caminar</option>
                                    <option value="Mascota">Pasear Contigo y tu Mascota</option>
                                    <option value="Cita">Acompañamiento a cita Medica</option>
                                </select>
                            </div>

                            <div class="form-group text-left">
                                <asp:Label for="duracion" class="fa fa-clock-o" style="color:beige"> Duracion (en Horas) </asp:Label>
                                <input id="duracion" name="duracion" type="number" value="1" class="form-control" style="color:black">
                            </div>

                            <div class="form-group text-left">
                                <asp:Label for="enfermero" class="fa fa-user-md" style="color:beige"> Enfermero  </asp:Label>
                                @Html.DropDownList("listaEnfermeros", null, htmlAttributes: new { @class = "form-control", @style = "color:black" })
                            </div>
                            
                            <div class="row" style="margin-bottom:20px;">
                                <div class="text-left offset-1">
                                    <button id="btnContinuar" class="btn btn-info btn-lg"> Continuar </button>
                                </div>

                        @{ Html.EndForm();}


                        @{ Html.BeginForm("vistaPerfilPaciente", "PerfilPaciente"); }

                                <div class="text-right offset-2">
                                    <button id="btnCancelar" align="center" class="btn btn-info btn-lg"> Cancelar </button>
                                </div>

                            </div>

                        @{ Html.EndForm();}

                    </div>
                </div>
            </div>
        </div>

    </body>

</html>
